.snaps-wrapper
  .snap
    .snap-head
      .thumb-img
      .user-name=snap.user.username
    .image.center-block
      =link_to image_tag(snap.image.url(:medium), class: 'img-responsive'), snap_path(snap)
    .snap-bottom
      .caption
        .user-name
          = snap.user.username
        =snap.caption
      - if snap.comments
        - snap.comments.each do |comment|
          .comment
            .user-name
              = comment.user.username
            .comment-content
              = comment.content
            - if comment.user == current_user
              = link_to snap_comment_path(snap, comment), method: :delete, data: { confirm: "Are you sure?"} do
                %span(class="blyphicon glyphicon-remove delete-comment")

      .comment-like-form.row
        .like-button.col-sm-1
          %span(class="glyphicon glyphicon-hear-empty")
        .comment-form.co-sm-11
          = form_for [snap, snap.comments.new] do |f|
            = f.text_field :content, placeholder: "Add a comment ..."
